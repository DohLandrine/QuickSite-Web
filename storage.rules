rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /users/{uid}/{folder}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.uid == uid
        && (folder == "avatar" || folder == "images" || folder == "videos");
    }

    match /{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
